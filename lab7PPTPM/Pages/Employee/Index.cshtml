@page
@model lab7PPTPM.Pages.Employee.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                border: 1px solid #dee2e6;
                padding: 10px;
                text-align: left;
            }

            .table th {
                background-color: #007bff;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #e9ecef;
            }

        a {
            text-decoration: none;
            color: #007bff;
        }

            a:hover {
                text-decoration: underline;
            }

        .create-link {
            margin-bottom: 20px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .create-link:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">lab7PPTPM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="../Index">Log out</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="../PositionJob/Index">Position Job</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Employee/Index">Employee</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <h1>Employees</h1>
    <p>
        <a class="create-link" asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Employee[0].EmployeeSurname)</th>
                <th>@Html.DisplayNameFor(model => model.Employee[0].EmployeeName)</th>
                <th>@Html.DisplayNameFor(model => model.Employee[0].EmployeePatronymic)</th>
                <th>@Html.DisplayNameFor(model => model.Employee[0].EmployeeLogin)</th>
                <th>@Html.DisplayNameFor(model => model.Employee[0].EmployeePassword)</th>
                <th>@Html.DisplayNameFor(model => model.Employee[0].PositionJobId)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Employee)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeSurname)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeePatronymic)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeLogin)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployeePassword)</td>
                    <td>@Html.DisplayFor(modelItem => item.PositionJobId)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.EmployeeId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.EmployeeId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
